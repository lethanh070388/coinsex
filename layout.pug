                                        .modal-body
                                            form#frmRegister.row(action="#" novalidate).needs-validation
                                                .col-md-6.mx-auto
                                                    .form-group
                                                        label.font-bold Username
                                                        input.form-control(type="text" placeholder="Type your username" required)
                                                        .invalid-feedback Please input your name
                                                    .form-group
                                                        label.font-bold Alias
                                                        input.form-control(type="text" placeholder="Type your alias" required)
                                                        .invalid-feedback Please input your alias
                                                    .form-group
                                                        label.font-bold Email
                                                        input.form-control(type="email" placeholder="Type your email" required)
                                                        .invalid-feedback Please input email
                                                .col-md-6.mx-auto
                                                    .form-group
                                                        label.font-bold Password
                                                        input.form-control(type="password" placeholder="Type your password" required)
                                                        .invalid-feedback Please input password
                                                    .form-group
                                                        label.font-bold Confirm password
                                                        input.form-control(type="password" placeholder="Retype your password" required)
                                                        .invalid-feedback Please confirm password
                                                    .form-group
                                                        label.font-bold Reference code
